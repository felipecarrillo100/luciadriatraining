{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": [
      "ES2022",
      "dom",
      "esnext.asynciterable"
    ],
    "paths": {
      "@core/*": ["app/core/*"],
      "@entities/*": ["app/entities/*"],
      "@pages/*": ["app/pages/*"],
      "@shared/*": ["app/shared/*"],
      "@interfaces/*": ["app/shared/interfaces/*"],
      "@pagination/*": ["app/shared/new-ui-components/main-table/pagination/*"]
    },
    "skipLibCheck": true
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false
  }
}
